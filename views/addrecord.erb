<% @record.each do |line| %>
<tr>
   <td><%= line['name'] %></td>
   <td><%= line['type'] %></td>
   <td><%= line['priority'] %></td>
   <td><%= line['content'] %></td>
   <td><%= line['ttl'] %></td>
<% end %>
</tr>
